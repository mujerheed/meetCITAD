# ==========================================
# meetCITAD Backend - Environment Variables
# ==========================================

# ============ SERVER ============
NODE_ENV=development
PORT=3000
API_VERSION=v1

# ============ DATABASE ============
MONGODB_URI=mongodb://localhost:27017/meetcitad
MONGODB_TEST_URI=mongodb://localhost:27017/meetcitad_test

# ============ REDIS ============
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ============ JWT ============
JWT_SECRET=your_very_secure_jwt_secret_minimum_32_characters_long
JWT_REFRESH_SECRET=your_very_secure_refresh_secret_minimum_32_characters_long
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d
JWT_COOKIE_EXPIRES_IN=7

# ============ OTP ============
OTP_WINDOW=1
OTP_STEP=30

# ============ EMAIL ============
MAILJET_API_KEY=your_mailjet_api_key
MAILJET_SECRET_KEY=your_mailjet_secret_key
EMAIL_FROM=noreply@citad.org
EMAIL_FROM_NAME=meetCITAD

# ============ SMS (Optional) ============
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# ============ STORAGE ============
STORAGE_TYPE=local
UPLOAD_DIR=./uploads
CERTIFICATE_DIR=./certificates
TEMPLATE_DIR=./templates

# AWS S3 (Optional)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=
AWS_S3_BUCKET=

# Cloudinary (Optional)
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# ============ SECURITY ============
BCRYPT_ROUNDS=10
SESSION_SECRET=your_session_secret_key
COOKIE_SECRET=your_cookie_secret_key
CSRF_SECRET=your_csrf_secret_key

# ============ CORS ============
CORS_ORIGIN=http://localhost:5173,http://localhost:5174
CORS_CREDENTIALS=true

# ============ RATE LIMITING ============
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=5
SCAN_RATE_LIMIT_MAX=100

# ============ FRONTEND URLS ============
FRONTEND_USER_URL=http://localhost:5173
FRONTEND_ADMIN_URL=http://localhost:5174

# ============ CERTIFICATE ============
CERTIFICATE_SIGNATURE_KEY=your_certificate_signature_key

# ============ LOGGING ============
LOG_LEVEL=debug
LOG_FILE=./logs/app.log

# ============ MONITORING ============
SENTRY_DSN=

# ============ BULL QUEUE ============
BULL_REDIS_HOST=localhost
BULL_REDIS_PORT=6379
BULL_REDIS_PASSWORD=

# ============ WORKER SETTINGS ============
CERTIFICATE_GENERATION_CONCURRENCY=3
EMAIL_QUEUE_CONCURRENCY=5
