# ==================================
# meetCITAD v2 Environment Variables
# ==================================

# ============ GENERAL ============
NODE_ENV=development
APP_NAME=meetCITAD

# ============ DATABASE ============
MONGO_ROOT_USER=admin
MONGO_ROOT_PASSWORD=secure_password_change_me
MONGODB_URI=mongodb://admin:secure_password_change_me@localhost:27017/meetcitad?authSource=admin

# ============ REDIS ============
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis_password_change_me

# ============ JWT SECRETS ============
JWT_SECRET=your_very_secure_jwt_secret_key_minimum_32_characters
JWT_REFRESH_SECRET=your_very_secure_refresh_secret_key_minimum_32_characters
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# ============ CORS ============
CORS_ORIGIN=http://localhost:5173,http://localhost:5174

# ============ EMAIL (Mailjet) ============
MAILJET_API_KEY=your_mailjet_api_key
MAILJET_SECRET_KEY=your_mailjet_secret_key
EMAIL_FROM=noreply@citad.org
EMAIL_FROM_NAME=meetCITAD

# ============ SMS (Optional - Twilio) ============
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# ============ STORAGE (AWS S3 / Cloudinary) ============
# Option 1: AWS S3
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=meetcitad-uploads

# Option 2: Cloudinary
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Storage Type: 'local', 's3', or 'cloudinary'
STORAGE_TYPE=local

# ============ OTP ============
OTP_SECRET_KEY=your_otp_secret_key_base32_encoded
OTP_EXPIRES_IN=300000
# 5 minutes in milliseconds

# ============ FRONTEND URLS ============
FRONTEND_USER_URL=http://localhost:5173
FRONTEND_ADMIN_URL=http://localhost:5174

# ============ API ============
API_PORT=3000
API_VERSION=v1
API_RATE_LIMIT_WINDOW=15
# minutes
API_RATE_LIMIT_MAX=100
# requests

# ============ SECURITY ============
BCRYPT_ROUNDS=10
SESSION_SECRET=your_session_secret_key_change_in_production
COOKIE_SECRET=your_cookie_secret_key_change_in_production

# ============ LOGGING ============
LOG_LEVEL=info
# error, warn, info, debug

# ============ CERTIFICATE ============
CERTIFICATE_SIGNATURE_KEY=your_certificate_signature_key

# ============ MONITORING (Optional) ============
SENTRY_DSN=your_sentry_dsn_url

# ============ PRODUCTION ONLY ============
# SSL_KEY_PATH=/path/to/ssl/private.key
# SSL_CERT_PATH=/path/to/ssl/certificate.crt
# DOMAIN=meetcitad.org
